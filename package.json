{
  "name": "tracking-system",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "mono:server": "yarn workspace @tracking-system/server dev:server",
    "mono:web": "yarn workspace @tracking-system/web start",
    "script:web": "yarn workspace @tracking-system/web",
    "script:server": "yarn workspace @tracking-system/server",
    "mono:dev": "concurrently 'yarn mono:web' 'yarn mono:server'",
    "docker:up": "cd packages/server && docker compose up"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": "https://github.com/alailsonko/Tracking-System.git",
  "author": "alailsonko <aalailson3@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^6.3.0"
  },
  "dependencies": {
    "date-fns": "^2.25.0",
    "ts-toolbelt": "^9.6.0"
  }
}
