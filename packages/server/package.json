{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "prisma": {
    "schema": "src/infra/db/schema.prisma"
  },
  "scripts": {
    "start": "node --trace-warnings ./dist/src/server.js",
    "build": "rimraf dist && tsc",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit:verbose": "jest --watch -c jest-unit-config.js",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage",
    "codegen": "npx graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-resolvers": "2.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-graphql": "^0.9.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.6.0",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "4",
    "eslint": "7",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.16",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@prisma/client": "^2.25.0",
    "apollo-server": "^2.24.1",
    "apollo-server-express": "^2.24.1",
    "bcrypt": "^5.0.1",
    "codegen": "^0.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.6.0",
    "graphql-relay": "^0.9.0",
    "graphql-tools": "^7.0.5",
    "http": "^0.0.1-security",
    "lodash": "^4.17.21",
    "ncp": "^2.0.0",
    "prisma": "^2.23.0",
    "slugify": "^1.5.3",
    "validator": "^13.6.0"
  }
}
