{
  "name": "@tracking-system/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "prisma": {
    "schema": "src/infra/db/prisma/schema.prisma"
  },
  "scripts": {
    "start": "node --trace-warnings ./dist/src/main/server.js",
    "build": "rimraf dist && tsc",
    "dev:server": "ts-node-dev --respawn --transpile-only src/main/server.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit:verbose": "jest --watch -c jest-unit-config.js",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage",
    "codegen": "npx graphql-codegen --config codegen.yml",
    "prisma:dev:migrate": "npx prisma migrate dev",
    "prisma:dev:generate": "npx prisma generate"
  },
