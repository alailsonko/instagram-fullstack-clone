// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String         @default(uuid())
  idSerial             Int            @id @default(autoincrement())
  username       String         @unique
  email          String         @unique
  password       String
  posts          Post[]
  lastTimeLogged String         @default("0")
  createdAt      DateTime       @db.Timestamptz
  updatedAt      DateTime       @db.Timestamptz
  likesOnPosts   LikesOnPosts[]
}

model Media {
  idSerial        Int      @id @default(autoincrement())
  id      String   @default(uuid())
  url       String
  post      Post?    @relation(fields: [postId], references: [idSerial], onDelete: Cascade, onUpdate: Cascade)
  postId    Int?
  createdAt DateTime @db.Timestamptz
  updatedAt DateTime @db.Timestamptz
}

model LikesOnPosts {
  user      User     @relation(fields: [userId], references: [idSerial], onDelete: Cascade, onUpdate: Cascade)
  userId    Int
  post      Post     @relation(fields: [postId], references: [idSerial], onDelete: Cascade, onUpdate: Cascade)
  postId    Int
  createdAt DateTime @db.Timestamptz
  updatedAt DateTime @db.Timestamptz

  @@id([userId, postId])
}

model Post {
  idSerial           Int            @id @default(autoincrement())
  id         String         @default(uuid())
  user         User?          @relation(fields: [userId], references: [idSerial], onDelete: Cascade, onUpdate: Cascade)
  userId       Int?
  description  String
  medias       Media[]
  createdAt    DateTime       @db.Timestamptz
  updatedAt    DateTime       @db.Timestamptz
  likesOnPosts LikesOnPosts[]
}
